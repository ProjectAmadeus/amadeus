<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amadeus.feelens">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_feelens"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_feelens"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FriendListActivity"></activity>
        <activity android:name=".InviteFriendsActivity" />
        <activity android:name=".TaskInfoActivity" />
        <activity android:name=".UserPostActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".TasksActivity" />
    </application>

</manifest>